<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Base application theme.-->
    <style name="Base.Theme.Eventify" parent="Theme.Material3.DayNight.NoActionBar">
        <!--Primary Brand Color-->
        <item name="colorPrimary">@color/purple_darker</item>
        <item name="colorPrimaryVariant">@color/purple_medium</item>
        <item name="colorOnPrimary">@color/black</item>
        <!--Secondary Brand Color-->
        <item name="colorSecondary">@color/air_force_blue</item>
        <item name="colorSecondaryVariant">@color/queen_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Tertiary Color -->
        <item name="colorTertiary">@color/green_dark</item>
        <item name="colorTertiaryContainer">@color/green_light</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorOnTertiaryContainer">@color/black</item>

        <!--Text Color-->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/neon_gray</item>
        <!--Text Font-->
        <item name="android:fontFamily">@font/luxie_rounded</item>
        <!--Background Color-->
        <item name="background">@color/snow</item>
        <item name="android:colorBackground">@color/black</item>

    </style>

    <style name="Theme.Eventify" parent="Base.Theme.Eventify" />

    <!-- Splash Screen -->
    <style name="Theme.EventifySplashScreenTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--Text Sizes-->
    <style name="app_title" parent="Base.Theme.Eventify">
        <item name="android:textSize">64sp</item>
    </style>
    <style name="title" parent="Base.Theme.Eventify">
        <item name="android:textSize">48sp</item>
    </style>
    <style name="sub_title" parent="Base.Theme.Eventify">
        <item name="android:textSize">36sp</item>
    </style>
    <style name="text" parent="Base.Theme.Eventify">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="sub_text" parent="Base.Theme.Eventify">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="btn_Text" parent="Base.Theme.Eventify">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>