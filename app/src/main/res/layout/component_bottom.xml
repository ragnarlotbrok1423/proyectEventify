<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/communityLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="620dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/bottomImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:foreground="@drawable/perfil"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/commentBox"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@id/bottomImage"
            android:background="@drawable/comment_container_border">

            <TextView
                android:id="@+id/commentHint"
                android:layout_width="229dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:onClick="onCommentClick"
                android:text="Write a comment"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="27dp"
                android:layout_height="41dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="251dp"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="Regresar"
                android:foreground="@android:drawable/arrow_up_float"
                android:foregroundTint="@color/azul"
                android:rotation="90" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
