<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:padding="16dp">


        <TextView
            android:id="@+id/textViewComments"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Perfil"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/perfilcard"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="27dp"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/quitButton"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:background="@android:color/transparent"
            android:contentDescription="Salir"
            android:foreground="@drawable/button_quit" />

        <RelativeLayout
            android:id="@+id/userTextLayout"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-17dp"
            android:layout_marginEnd="156dp"
            android:padding="16dp">


            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/username"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_marginTop="1dp"
                android:text="@string/faculty"
                android:textColor="#888888"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_marginTop="29dp"
                android:background="@drawable/light_gray_container"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/market"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="0dp"
                    android:text="@string/description_market"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:layout_width="145dp"
            android:layout_height="137dp"
            android:layout_alignTop="@+id/relativeLayout3"
            android:layout_marginStart="-150dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/userTextLayout"
            android:foreground="@drawable/circle_green" />

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="217dp"
            android:layout_height="176dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="175dp"
            android:layout_marginEnd="3dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="186dp"
                android:layout_height="145dp"
                android:foreground="@drawable/wap" />

            <Button
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_alignStart="@+id/imageView"
                android:layout_marginStart="65dp"
                android:layout_marginTop="-48dp"
                android:backgroundTint="#6750A4"
                android:contentDescription="Follow"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="2dp"
                android:text="Follow"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:cornerRadius="50dp" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/perfilcard"

        >

        <RelativeLayout
            android:id="@+id/communityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/border"
            android:padding="16dp">


            <HorizontalScrollView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp">

                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/circle_green"
                            android:contentDescription="Community 1" />
                    </RelativeLayout>


                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="-1dp">

        <RelativeLayout
            android:id="@+id/community"

            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:layout_marginTop="370dp"
            android:background="#AEADC5">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fillViewport="true">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="3">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_button"
                        android:contentDescription="Button 1" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_button"
                        android:contentDescription="Button 1" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_button"
                        android:contentDescription="Button 1" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/rounded_button"
                        android:contentDescription="Button 1" />


                </GridLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>